// Fonction pour logger avec timestamp
void log_message(const char *level, const char *message) {
    time_t now = time(NULL);
    char timestamp[26];
    strftime(timestamp, sizeof(timestamp), "%Y-%m-%d %H:%M:%S", localtime(&now));
    printf("[%s] [%s] %s\n", timestamp, level, message);
}

// Fonction pour envoyer un message au client
int send_message(int socket, const char *message) {
    int len = strlen(message);
    if (send(socket, message, len, 0) < 0) {
        perror("Erreur d'envoi");
        return -1;
    }
    return 0;
}

// Fonction pour recevoir un message du client
int receive_message(int socket, char *buffer, int size) {
    memset(buffer, 0, size);
    int bytes_received = recv(socket, buffer, size - 1, 0);
    if (bytes_received < 0) {
        perror("Erreur de rÃ©ception");
        return -1;
    }
    buffer[strcspn(buffer, "\n")] = 0;
    buffer[strcspn(buffer, "\r")] = 0;
    return bytes_received;
}

