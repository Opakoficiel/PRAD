    // Ã‰couter
    if (listen(server_socket, MAX_CLIENTS) < 0) {
        perror("Erreur d'Ã©coute");
        close(server_socket);
        exit(EXIT_FAILURE);
    }

    log_message("SUCCESS", "Serveur dÃ©marrÃ© !");
    printf("ğŸ“¡ Port : %d\n", PORT);
    printf("ğŸ‘¥ Clients maximum : %d\n", MAX_CLIENTS);
    printf("ğŸ† Top scores enregistrÃ©s : %d\n", TOP_SCORES);
    printf("ğŸ¯ Plage dynamique : OUI (selon nombre de clients)\n\n");
    log_message("INFO", "En attente de connexions...");

    // Boucle principale
    while (1) {
        client_data_t *client = malloc(sizeof(client_data_t));
        if (!client) {
            log_message("ERROR", "Erreur d'allocation mÃ©moire");
            continue;
        }

        memset(client, 0, sizeof(client_data_t));

        client->socket = accept(server_socket,
                               (struct sockaddr *)&client->address,
                               &client_len);

        if (client->socket < 0) {
            perror("Erreur d'acceptation");
            free(client);
            continue;
        }

        client->client_id = ++client_counter;

        // VÃ©rifier le nombre max de clients
        pthread_mutex_lock(&clients_mutex);
        int current_clients = active_clients;
        pthread_mutex_unlock(&clients_mutex);

        if (current_clients >= MAX_CLIENTS) {
            log_message("WARNING", "Nombre maximum de clients atteint");
            send_message(client->socket,
                        "â›” Serveur plein ! Nombre maximum de clients atteint.\n"
                        "RÃ©essayez dans quelques instants.\n");
            close(client->socket);
            free(client);
            continue;
        }

        // CrÃ©er un thread
        pthread_t thread_id;
        if (pthread_create(&thread_id, NULL, handle_client, (void *)client) != 0) {
            log_message("ERROR", "Erreur de crÃ©ation du thread");
            close(client->socket);
            free(client);
            continue;
        }

        pthread_detach(thread_id);
    }

    close(server_socket);
    return 0;
