// Demander le nom du joueur
int get_player_name(int socket, char *name) {
    char buffer[BUFFER_SIZE];

    send_message(socket, "\nğŸ“ Entrez votre nom (3-10 lettres uniquement): ");

    while (1) {
        if (receive_message(socket, buffer, BUFFER_SIZE) <= 0) {
            return -1;
        }

        // Nettoyer le nom
        char *trimmed = buffer;
        while (*trimmed == ' ') trimmed++;

        int len = strlen(trimmed);
        while (len > 0 && trimmed[len - 1] == ' ') {
            trimmed[--len] = '\0';
        }

        // VÃ©rifier longueur
        if (len < 3) {
            send_message(socket, "âŒ Nom trop court ! (minimum 3 lettres)\nğŸ“ Entrez votre nom: ");
            continue;
        }

        if (len > 10) {
            send_message(socket, "âŒ Nom trop long ! (maximum 10 lettres)\nğŸ“ Entrez votre nom: ");
            continue;
        }

        // VÃ©rifier que ce sont uniquement des lettres
        int valid = 1;
        for (int i = 0; i < len; i++) {
            if (!((trimmed[i] >= 'a' && trimmed[i] <= 'z') ||
                  (trimmed[i] >= 'A' && trimmed[i] <= 'Z'))) {
                valid = 0;
                break;
            }
        }

        if (!valid) {
            send_message(socket, "âŒ Le nom doit contenir uniquement des lettres !\nğŸ“ Entrez votre nom: ");
            continue;
        }

        strncpy(name, trimmed, MAX_NAME_LENGTH - 1);
        name[MAX_NAME_LENGTH - 1] = '\0';

        snprintf(buffer, sizeof(buffer), "âœ… Bienvenue %s !\n", name);
        send_message(socket, buffer);
        return 0;
    }
}

